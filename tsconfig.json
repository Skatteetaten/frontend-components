{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "target": "es5",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/components/**/*"
  ]
}
